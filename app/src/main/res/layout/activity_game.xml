<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pokertable">

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:background="@color/red"
        android:textColor="@color/white"
        android:text="Restart">
    </Button>
    <TextView
        style="@style/Text"
        android:id="@+id/player1text"
        android:text="Player 1"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="150dp"
        >
    </TextView>

    <TextView
        style="@style/Text"
        android:id="@+id/dealertext"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Dealer"
        >
    </TextView>

    <ImageView
        android:id="@+id/playercard1"
        style="@style/Back_Card"
        android:layout_alignTop="@+id/player1text"
        android:layout_margin="20dp"
        android:layout_alignRight="@+id/player1text">
    </ImageView>
    <ImageView
        android:id="@+id/playercard2"
        style="@style/Back_Card"
        android:layout_alignTop="@+id/player1text"
        android:layout_margin="20dp"
        android:layout_alignLeft="@+id/player1text">
    </ImageView>

</RelativeLayout>



